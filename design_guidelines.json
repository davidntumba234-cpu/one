{
  "design_system": {
    "identity": {
      "name": "Neuronova",
      "tagline": "Tech. Intelligence. Afrique.",
      "tone": "Cinematic, Sovereign, Futuristic, Premium, Bold",
      "theme": "dark"
    },
    "typography": {
      "font_family": {
        "headings": "Clash Display, sans-serif",
        "body": "Manrope, sans-serif"
      },
      "scale": {
        "h1": "text-6xl md:text-8xl font-bold tracking-tight",
        "h2": "text-4xl md:text-6xl font-semibold tracking-tight",
        "h3": "text-2xl md:text-3xl font-medium",
        "body": "text-base md:text-lg leading-relaxed text-slate-300",
        "caption": "text-sm uppercase tracking-widest text-slate-500"
      }
    },
    "colors": {
      "palette": {
        "background": "#020617",
        "foreground": "#F8FAFC",
        "primary": "#38BDF8",
        "secondary": "#1E293B",
        "accent": "#F59E0B",
        "muted": "#0F172A",
        "border": "rgba(255, 255, 255, 0.1)"
      },
      "gradients": {
        "primary": "linear-gradient(135deg, #38BDF8 0%, #0EA5E9 100%)",
        "gold": "linear-gradient(135deg, #F59E0B 0%, #D97706 100%)",
        "dark_overlay": "linear-gradient(to bottom, rgba(2, 6, 23, 0) 0%, #020617 100%)",
        "glow_blue": "radial-gradient(circle at center, rgba(56, 189, 248, 0.15) 0%, transparent 70%)"
      }
    },
    "visual_enhancers": {
      "glassmorphism": "bg-slate-950/50 backdrop-blur-xl border border-white/10 shadow-2xl",
      "neon_glow": "shadow-[0_0_20px_-5px_rgba(56,189,248,0.5)]",
      "gold_glow": "shadow-[0_0_20px_-5px_rgba(245,158,11,0.5)]",
      "texture": "noise-overlay",
      "border_radius": {
        "card": "rounded-2xl",
        "button": "rounded-full"
      }
    },
    "layout_strategies": {
      "spacing": {
        "section_padding": "py-24 md:py-32",
        "container": "max-w-7xl mx-auto px-4 sm:px-6 lg:px-8",
        "grid_gap": "gap-8 md:gap-12"
      },
      "grids": {
        "bento_services": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6",
        "founders": "grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-24"
      }
    },
    "motion": {
      "library": "framer-motion",
      "defaults": {
        "duration": 0.6,
        "ease": [0.22, 1, 0.36, 1]
      },
      "types": {
        "fade_up": {
          "initial": { "opacity": 0, "y": 40 },
          "whileInView": { "opacity": 1, "y": 0 },
          "viewport": { "once": true }
        },
        "stagger_children": {
          "visible": { "transition": { "staggerChildren": 0.1 } }
        },
        "parallax": "useScroll + useTransform for y-axis movement"
      }
    }
  },
  "assets": {
    "images": {
      "hero_bg": {
        "url": "https://images.pexels.com/photos/8728559/pexels-photo-8728559.jpeg",
        "alt": "Futuristic African City Skyline",
        "usage": "Hero Section Background with overlay"
      },
      "founders": [
        {
          "name": "David Ntumba",
          "role": "Co-Founder & CEO",
          "url": "https://images.pexels.com/photos/1327880/pexels-photo-1327880.jpeg",
          "alt": "David Ntumba Portrait"
        },
        {
          "name": "Jordan Leko",
          "role": "Co-Founder & CTO",
          "url": "https://images.pexels.com/photos/1555177/pexels-photo-1555177.jpeg",
          "alt": "Jordan Leko Portrait"
        }
      ],
      "services": {
        "ai_automation": "https://images.pexels.com/photos/17485657/pexels-photo-17485657.png",
        "cybersecurity": "https://images.pexels.com/photos/7789851/pexels-photo-7789851.jpeg",
        "web_dev": "https://images.pexels.com/photos/8728559/pexels-photo-8728559.jpeg",
        "team_mission": "https://images.pexels.com/photos/9536008/pexels-photo-9536008.jpeg",
        "office_culture": "https://images.pexels.com/photos/10991709/pexels-photo-10991709.jpeg"
      }
    },
    "icons": "lucide-react"
  },
  "components": {
    "Hero": {
      "path": "/app/frontend/src/components/Hero.js",
      "specs": "Full screen, parallax bg, centered text 'Tech. Intelligence. Afrique.', glowing CTA buttons."
    },
    "Services": {
      "path": "/app/frontend/src/components/Services.js",
      "specs": "Bento grid layout, 6 categories, hover reveal effects, glassmorphism cards."
    },
    "Founders": {
      "path": "/app/frontend/src/components/Founders.js",
      "specs": "Large portraits, black & white to color on hover, bio text slide up."
    },
    "Contact": {
      "path": "/app/frontend/src/components/Contact.js",
      "specs": "Minimalist form, floating WhatsApp button, map background."
    },
    "Navigation": {
      "path": "/app/frontend/src/components/Navbar.js",
      "specs": "Sticky glass header, blur effect, mobile menu overlay."
    }
  },
  "instructions_to_main_agent": [
    "Use the provided 'Clash Display' font for all headings to maintain the premium feel.",
    "Implement 'lenis' for smooth scrolling if possible, or ensure native smooth scroll is active.",
    "Ensure all text has sufficient contrast against the dark background (APCA standards).",
    "Use the 'glass' utility class from index.css for cards and overlays.",
    "Apply 'noise-overlay' to the main background for texture.",
    "Do NOT use gradients for text unless it's a very large headline.",
    "For the 60+ services, use a 'Tabs' component or a 'Show More' mechanism to avoid cluttering the page initially.",
    "The 'Mission' section should use the 'team_mission' image with a dark overlay and white text.",
    "Founders' images should be grayscale by default and transition to full color on hover."
  ],
  "universal_guidelines": [
    "Avoid generic 'AI slop' designs; prioritize asymmetry and bold spacing.",
    "Use 2-3x more padding than usual (e.g., py-32 for sections).",
    "Never use pure black (#000000); use the provided slate-950 (#020617).",
    "All interactive elements must have a hover state (color shift, lift, or glow).",
    "Add 'data-testid' to all interactive elements."
  ]
}